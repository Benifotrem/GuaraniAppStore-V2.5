# ==============================================
# GuaraniAppStore V2.5 - Laravel Edition
# Plataforma de Automatización con 11 Servicios
# ==============================================

APP_NAME="GuaraniAppStore"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://tudominio.com

APP_LOCALE=es
APP_FALLBACK_LOCALE=es
APP_FAKER_LOCALE=es_ES
APP_TIMEZONE=America/Asuncion

# ==============================================
# DATABASE - MySQL/MariaDB
# ==============================================
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=guarani_appstore
DB_USERNAME=root
DB_PASSWORD=

# ==============================================
# SESSION & CACHE
# ==============================================
SESSION_DRIVER=database
SESSION_LIFETIME=120
CACHE_STORE=database
QUEUE_CONNECTION=database

# ==============================================
# MAIL CONFIGURATION (SMTP)
# ==============================================
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@tudominio.com"
MAIL_FROM_NAME="${APP_NAME}"

# ==============================================
# OPENROUTER IA (Principal API para IA)
# ==============================================
# Para: Agente Ventas, Asistente Personal, Blogs, etc.
# Obtener en: https://openrouter.ai/keys
OPENROUTER_API_KEY=sk-or-v1-xxxxxxxxxxxxxxxxxxxxx
OPENROUTER_DEFAULT_MODEL=anthropic/claude-3.5-sonnet

# ==============================================
# GOOGLE APIS (Opcionales)
# ==============================================
# Google Calendar API (para Asistente Personal y Agenda)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI="${APP_URL}/auth/google/callback"

# Google Drive API (para almacenamiento de facturas - opcional)
GOOGLE_DRIVE_CLIENT_ID=
GOOGLE_DRIVE_CLIENT_SECRET=

# Gemini API (para generación de imágenes en blogs - opcional)
GOOGLE_GEMINI_API_KEY=

# ==============================================
# TELEGRAM BOTS
# ==============================================
# Obtener en: @BotFather en Telegram

# Bot 1: Agente de Ventas IA
TELEGRAM_BOT_SALES_TOKEN=

# Bot 2: Asistente Personal Directivos
TELEGRAM_BOT_ASSISTANT_TOKEN=

# Bot 3: CryptoShield (Suite Crypto)
TELEGRAM_BOT_CRYPTOSHIELD_TOKEN=

# Bot 4: Pulse IA (Suite Crypto)
TELEGRAM_BOT_PULSE_TOKEN=

# Bot 5: Momentum Predictor (Suite Crypto)
TELEGRAM_BOT_MOMENTUM_TOKEN=

# Bot 6: Organizador de Agenda (notificaciones)
TELEGRAM_BOT_AGENDA_TOKEN=

# Bot 7: Automatización Redes (notificaciones)
TELEGRAM_BOT_SOCIAL_TOKEN=

# ==============================================
# OUTSCRAPER API (Google Maps Scraping)
# ==============================================
# Para: Servicio de Ruptura del Hielo
# Obtener en: https://outscraper.com/api-access/
OUTSCRAPER_API_KEY=

# ==============================================
# CRYPTO APIS (Suite Crypto)
# ==============================================
# CoinMarketCap API (datos de mercado)
COINMARKETCAP_API_KEY=

# Etherscan API (análisis de contratos Ethereum)
ETHERSCAN_API_KEY=

# BSCScan API (análisis de contratos BSC)
BSCSCAN_API_KEY=

# ==============================================
# PAYMENT GATEWAYS (Pasarelas de Pago)
# ==============================================

# PAYPAL
PAYPAL_MODE=sandbox # sandbox o live
PAYPAL_SANDBOX_CLIENT_ID=
PAYPAL_SANDBOX_SECRET=
PAYPAL_LIVE_CLIENT_ID=
PAYPAL_LIVE_SECRET=

# PAGOPAR (Paraguay)
PAGOPAR_PUBLIC_KEY=
PAGOPAR_PRIVATE_KEY=
PAGOPAR_SANDBOX=true

# BANCARD (Paraguay)
BANCARD_PUBLIC_KEY=
BANCARD_PRIVATE_KEY=
BANCARD_SANDBOX=true

# CRYPTOCURRENCY PAYMENTS
# Direcciones de wallets para recibir pagos crypto
CRYPTO_WALLET_BTC=
CRYPTO_WALLET_ETH=
CRYPTO_WALLET_USDT_ERC20=
CRYPTO_WALLET_USDT_TRC20=

# NOWPayments API (procesador de pagos crypto - opcional)
NOWPAYMENTS_API_KEY=
NOWPAYMENTS_SANDBOX=true

# ==============================================
# OCR CONFIGURATION (Facturas y CVs)
# ==============================================
# Tesseract está instalado localmente, no requiere API
TESSERACT_PATH=/usr/bin/tesseract
TESSERACT_LANG=spa+eng

# Google Cloud Vision (alternativa OCR - opcional)
GOOGLE_VISION_API_KEY=

# ==============================================
# SOCIAL MEDIA APIS (Automatización Redes)
# ==============================================

# Twitter/X API
TWITTER_API_KEY=
TWITTER_API_SECRET=
TWITTER_BEARER_TOKEN=
TWITTER_ACCESS_TOKEN=
TWITTER_ACCESS_SECRET=

# LinkedIn API
LINKEDIN_CLIENT_ID=
LINKEDIN_CLIENT_SECRET=

# Facebook/Instagram API
FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=
FACEBOOK_ACCESS_TOKEN=

# Buffer API (opcional para programación)
BUFFER_ACCESS_TOKEN=

# ==============================================
# TRIAL & SUBSCRIPTION SETTINGS
# ==============================================
TRIAL_DAYS=7 # Días de trial gratuito
CRYPTO_DISCOUNT_PERCENT=25 # 25% descuento pagando con crypto

# ==============================================
# FILE STORAGE
# ==============================================
FILESYSTEM_DISK=local # local, s3, google
# Rutas de almacenamiento
STORAGE_INVOICES=storage/app/invoices
STORAGE_CVS=storage/app/cvs
STORAGE_CONSULTANCY_REPORTS=storage/app/consultancy

# AWS S3 (opcional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# ==============================================
# LOGGING
# ==============================================
LOG_CHANNEL=stack
LOG_STACK=single
LOG_LEVEL=info

# ==============================================
# VITE
# ==============================================
VITE_APP_NAME="${APP_NAME}"
VITE_APP_URL="${APP_URL}"
